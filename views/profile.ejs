<%- include('./partials/_header'); %>
<%- include('./partials/_navigation'); %>

  
    <div class="all-title-box">
        <div class="container text-center">
        <h1>Profilim</h1>
        </div>
    </div>

         <div class="profile-form">     
            
            <% for (let i = 0; i < users.length; i++) { %>
                <% if (currentUser._id.toString() === users[i]._id.toString()) { %>
                  <div>Kullanıcı Bilgilerini Güncelle</div>
                  <div class="clearfix">
                    <div style="list-style-type: none;">
                      <li style="float: left;">
                        <button class="btn btn-primary rounded-0 text-white"
                          data-toggle="modal" data-target="#updateUserProfile<%= users[i]._id %>">
                          <span>Güncelle</span>
                        </button>
                      </li>
                    </div>
                  </div>
              
                  <!-- UPDATE Modal -->
                  <div class="modal fade" id="updateUserProfile<%= users[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                      <div class="modal-content">
                        <div class="modal-body customer-box">
                          <!-- Tab panes -->
                          <div class="tab-content">
                            <div class="tab-pane active" id="Login">
                              <form method="POST" action="/users/<%= users[i]._id %>?_method=PUT" class="form-horizontal">
                                <div class="form-group">
                                  <div class="col-sm-12">
                                    <!-- Kullanıcı bilgilerini güncelleyen input alanları -->
                                    <input type="text" name="name" value="<%= users[i].name %>" class="form-control" placeholder=" Kullanıcı Adı">
                                    <input type="text" name="email" value="<%= users[i].email %>" class="form-control" placeholder="Kullanıcı Emaili">
                                    <input type="password" name="password" class="form-control" placeholder="Kullanıcı Şifresi">
                                  </div>
                                </div>
                                <div class="col-sm-10">
                                  <button type="submit" class="btn btn-light btn-radius btn-brd grd1">
                                    Bilgilerimi Güncelle
                                  </button>
                                  <button type="submit" class="btn btn-light btn-radius btn-brd grd1"
                                    data-dismiss="modal" aria-hidden="true">
                                    İptal Et
                                  </button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% } %>
              
                 
                    
          </div>


<%- include('./partials/_footer'); %>

